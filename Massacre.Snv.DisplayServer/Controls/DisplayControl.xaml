<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="Massacre.Snv.DisplayServer.Controls.DisplayControl"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Source="{Binding Image}"/>
        <Image Name="fullScreenIcon" Width="16" Height="16" Margin="0,-17,0,0"
               HorizontalAlignment="Right" VerticalAlignment="Top"
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               Source="pack://application:,,,/Massacre.Snv.DisplayServer;component/Icons/fullscreen.png"
               ToolTip="Open in a new window"
               MouseUp="OnFullScreenIconMouseUp"/>
    </Grid>
</UserControl>
